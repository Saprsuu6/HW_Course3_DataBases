@model Client
@{
    ViewData["Title"] = Localizer["Header"];
}

@section Navigation {
    @{
        await Html.RenderPartialAsync("Navigation");
    }
}

<h1>@Localizer["Header"]</h1>

<div>
    <form method="post" asp-action="Update" >
        <input type="text" asp-for="Name" value="@Model.Name" placeholder="@Localizer["Name"]"/><br />
        <span asp-validation-for="Name"></span><br />
    
        <input type="text" asp-for="Surename" value="@Model.Surename" placeholder="@Localizer["Surename"]"/><br />
        <span asp-validation-for="Surename"></span><br />
    
        <input type="password" asp-for="Password" value="@Model.Password" placeholder="@Localizer["Password"]"/><br />
        <span asp-validation-for="Password"></span><br />

        <input type="submit" value="@Localizer["Button"]"/><br /><br />

        <input type="hidden" asp-for="Id" value="@Model.Id"/><br />
    </form>
    
    <p>@ViewBag.Message</p> 
</div>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

