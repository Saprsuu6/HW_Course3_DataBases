@model Client
@{
    ViewData["Title"] = "Change info";
}

@section Navigation {
    @{
        await Html.RenderPartialAsync("Navigation");
    }
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Update" >
        <label>Name</label><br />
        <input type="text" asp-for="Name" value="@Model.Name"/><br />
        <span asp-validation-for="Name"></span><br />
    
        <label>Surename</label><br />
        <input type="text" asp-for="Surename" value="@Model.Surename"/><br />
        <span asp-validation-for="Surename"></span><br />
    
        <label>Password</label><br />
        <input type="password" asp-for="Password" value="@Model.Password"/><br />
        <span asp-validation-for="Password"></span><br />

        <input type="submit" value="Save"/><br /><br />

        <input type="hidden" asp-for="Id" value="@Model.Id"/><br />
    </form>
    
    <p>@ViewBag.Message</p> 
</div>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

