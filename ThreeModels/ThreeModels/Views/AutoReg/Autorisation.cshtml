@model Client
@{
    ViewData["Title"] = "Autorisation";
}

@section Navigation {
    @{
        await Html.RenderPartialAsync("Navigation");
    }
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="text" asp-for="Name" placeholder="Name"/><br />
    <span asp-validation-for="Name"></span><br />

    <input type="text" asp-for="Surename" placeholder="Surename"/><br />
    <span asp-validation-for="Surename"></span><br />

    <input type="password" asp-for="Password" placeholder="Password"/><br />
    <span asp-validation-for="Password"></span><br />

    <input type="submit" value="Log in" asp-action="Autorisation" /><br /><br />
</form>

<p>@ViewBag.Message</p>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
