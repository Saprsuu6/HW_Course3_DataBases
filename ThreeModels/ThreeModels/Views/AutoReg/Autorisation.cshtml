@model Client
@{
    ViewData["Title"] = @Localizer["Header"];
}

@section Navigation {
    @{
        await Html.RenderPartialAsync("Navigation");
    }
}

<h1>@Localizer["Header"]</h1>

<form method="post">
    <input type="text" asp-for="Name" placeholder="@Localizer["Name"]"/><br />
    <span asp-validation-for="Name"></span><br />

    <input type="text" asp-for="Surename" placeholder="@Localizer["Surename"]"/><br />
    <span asp-validation-for="Surename"></span><br />

    <input type="password" asp-for="Password" placeholder="@Localizer["Password"]"/><br />
    <span asp-validation-for="Password"></span><br />

    <input type="submit" value="@Localizer["Button"]" asp-action="Autorisation" /><br /><br />
</form>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
