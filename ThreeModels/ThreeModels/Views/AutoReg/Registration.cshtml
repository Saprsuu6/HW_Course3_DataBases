@model Client
@{
    ViewData["Title"] = "Registration";
}

@section Navigation {
    @{
        await Html.RenderPartialAsync("Navigation");
    }
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
        <label>Name</label><br />
        <input type="text" asp-for="Name"/><br />
        <span asp-validation-for="Name"></span><br />
    
        <label>Surename</label><br />
        <input type="text" asp-for="Surename"/><br />
        <span asp-validation-for="Surename"></span><br />
    
        <label>Password</label><br />
        <input type="password" asp-for="Password"/><br />
        <span asp-validation-for="Password"></span><br />

        <input type="submit" value="Sing up" asp-action="Registration" /><br /><br />
    </form>
    
    <p>@ViewBag.Message</p> 
</div>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
